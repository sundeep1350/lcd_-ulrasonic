#include <LiquidCrystal.h>
LiquidCrystal lcd (2,3,4,5,6,7);
int  trigpin = 8;
int echopin = 9;
float duration;
float distance;

void setup() 
{
lcd.begin(16,2);
Serial.begin(9600);
pinMode(trigpin,OUTPUT);
pinMode(echopin,INPUT);
}

void loop() {
  digitalWrite(8,LOW);
  delay(100);
  digitalWrite(8,HIGH);
  delay(100);
  digitalWrite(8,LOW);
  duration=pulseIn(9,HIGH);
  distance=0.034*duration/2.0;
  lcd.setCursor(0,0);
  lcd.print("Distance: ");
  lcd.print(distance);
 Serial.println("Distance: " + String(distance));
 delay(1000);
